<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="createDocumentModelTable" author="CsSzegleti">
        <createTable tableName="files">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="file_extension" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="file_size" type="int"/>
            <column name="hash" type="varchar(100)"/>
            <column name="uploaded_at" type="timestamp"/>
            <column name="uploader" type="varchar(100)"/>
            <column name="uploader_ip" type="varchar(39)"/>
            <column name="virus_checked" type="boolean"/>
            <column name="url_suffix" type="varchar(500)"/>
            <column name="meta_data" type="jsonb"/>
            <column name="relative_path" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>